{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OOC story",
  "version": "0.2.0",
  "identifier": "io.iwannatoa.ooc",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": "npm run build:python && npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": false,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["resources/flask-api"]
  },
  "app": {
    "windows": [
      {
        "title": "OOC story",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "backgroundColor": "#1a1a1a",
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://localhost:*; connect-src 'self' http://localhost:* ws://localhost:*"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
