# 环境变量示例文件
# 复制此文件为 .env 并根据需要修改配置

# 应用配置
VITE_APP_NAME="OOC story"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Create your own OOC story"

# API 配置
VITE_FLASK_API_URL=http://localhost:5000
VITE_OLLAMA_BASE_URL=http://localhost:11434

# 环境配置
VITE_DEV_MODE=true
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# 功能开关
VITE_ENABLE_STREAMING=false
VITE_ENABLE_MODEL_MANAGEMENT=true
VITE_ENABLE_CHAT_HISTORY=true
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_CONSOLE_LOGS=true

# 超时设置（毫秒）
VITE_API_TIMEOUT=120000
VITE_HEALTH_CHECK_TIMEOUT=5000

# 默认配置
VITE_DEFAULT_MODEL=llama2
VITE_MAX_MESSAGE_LENGTH=4000

# 生产优化
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHE=true
